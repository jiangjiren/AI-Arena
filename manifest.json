{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.2",
  "description": "__MSG_extensionDescription__",
  "default_locale": "zh_CN",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://x.com/*",
    "https://chat.deepseek.com/*",
    "https://yuanbao.tencent.com/*",
    "https://doubao.com/*",
    "https://www.doubao.com/*",
    "https://qwen.ai/*",
    "https://chat.qwen.ai/*",
    "https://kimi.com/*",
    "https://www.kimi.com/*",
    "https://kimi.moonshot.cn/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AI Multi-Chat"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://chat.deepseek.com/*",
        "https://yuanbao.tencent.com/*",
        "https://doubao.com/*",
        "https://www.doubao.com/*",
        "https://qwen.ai/*",
        "https://chat.qwen.ai/*",
        "https://kimi.com/*",
        "https://www.kimi.com/*",
        "https://kimi.moonshot.cn/*"
      ],
      "js": [
        "src/content/unified.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/unified.js"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://chat.deepseek.com/*",
        "https://yuanbao.tencent.com/*",
        "https://doubao.com/*",
        "https://www.doubao.com/*",
        "https://qwen.ai/*",
        "https://chat.qwen.ai/*",
        "https://kimi.com/*",
        "https://www.kimi.com/*",
        "https://kimi.moonshot.cn/*"
      ]
    }
  ]
}
